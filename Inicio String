char slen(){
	char cavalo[50];
	int i=0;
	puts("Digite sua string: ");
	scanf("%s",&cavalo);
	for(i=0;cavalo[i]!=0;i++);{
		i++;
	}
	--i;
	printf("%d",i);
	
}
